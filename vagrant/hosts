# co-locate zookeepers on masters
# to save memory footprint - split out for prod.
[zookeepers]
master1

[slaves]
slave[1:2]

[masters]
master1

[mesos:children]
masters
slaves

[mesos:vars]
mesos_zk_group=zookeepers

[all:vars]

# slaves CC syslog messages here 
# (used by 'log/fwd' role, must match the node running 'log/sink' role)
syslog_sink=master1

# connection details
ansible_ssh_user=vagrant
ansible_ssh_private_key_file=~/.vagrant.d/insecure_private_key

# mesos settings
mesos_rpm=mesos-0.21.0
mesos_interface=ansible_eth1
